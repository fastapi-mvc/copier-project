{ lib
, python
, poetry2nix
}:

poetry2nix.mkPoetryApplication {
  inherit python;

  projectDir = ./.;
  pyproject = ./pyproject.toml;
  poetrylock = ./poetry.lock;

  pythonImportsCheck = [ "{{package_name}}" ];

  meta = with lib; {
    homepage = "{{repo_url}}";
    description = "{{project_description}}";
  };
}

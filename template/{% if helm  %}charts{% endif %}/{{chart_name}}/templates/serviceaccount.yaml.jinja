{% raw %}{{- if .Values.serviceAccount.create -}}
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ include "{% endraw %}{{chart_name}}{% raw %}.serviceAccountName" . }}
  labels:
    {{- include "{% endraw %}{{chart_name}}{% raw %}.labels" . | nindent 4 }}
  {{- with .Values.serviceAccount.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
{{- end }}{% endraw %}
